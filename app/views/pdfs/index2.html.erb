<%= link_to 'New PDF', new_pdf_path(), class: 'btn btn-primary' %>
<br>
<br>
<%= form_tag("/index2", method: "get", remote: true, class: "form-group") do %>
    <%= text_field_tag(:search, nil, placeholder: "Enter name of PDF", autocomplete: :off, class: "form-control") %>
    <%= submit_tag("Search", id: "triggersearch", class: "invisible") %>
<% end %>
<div id="pdfresults">
  <%= render 'pdfresults' %>
</div>


<script>
    $(document).ready(function(){

        addclipboard();

        $( "#search" ).keyup(function() {
            $( "#pdfresults" ).html( "<div class=\"mx-auto loader\"></div>" );

          $("#triggersearch").click();
        });

    });
</script>
